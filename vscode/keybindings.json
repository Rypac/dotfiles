[
    {
        "key": "ctrl+o",
        "command": "workbench.action.navigateBack",
        "when": "editorTextFocus && !inDebugRepl && vim.useCtrlKeys && vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+i",
        "command": "workbench.action.navigateForward",
        "when": "editorTextFocus && !inDebugRepl && vim.useCtrlKeys && vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+f",
        "command": "actions.find",
        "when": "editorTextFocus && !inDebugRepl && vim.useCtrlKeys && vim.mode == 'Insert'"
    },
    {
        "key": "ctrl+n",
        "command": "editor.action.addSelectionToNextFindMatch",
        "when": "editorTextFocus && !inDebugRepl && !suggestWidgetVisible && vim.useCtrlKeys && vim.mode == 'Insert'"
    },
    {
        "key": "ctrl+n",
        "command": "extension.vim_cmd+d",
        "when": "editorTextFocus && !inDebugRepl && !suggestWidgetVisible && vim.useCtrlKeys && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+p",
        "command": "editor.action.moveSelectionToPreviousFindMatch",
        "when": "editorTextFocus && !inDebugRepl && !suggestWidgetVisible && vim.useCtrlKeys && vim.mode != 'Normal'"
    },
    {
        "key": "ctrl+x",
        "command": "editor.action.moveSelectionToNextFindMatch",
        "when": "editorTextFocus && !inDebugRepl && !suggestWidgetVisible && vim.useCtrlKeys && vim.mode != 'Normal'"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpenNavigatePrevious",
        "when": "inQuickOpen && vim.useCtrlKeys"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.quickOpenNavigateNext",
        "when": "inQuickOpen && vim.useCtrlKeys"
    },
    {
        "key": "ctrl+c",
        "command": "workbench.action.closeQuickOpen",
        "when": "inQuickOpen && vim.useCtrlKeys"
    },
    {
        "key": "ctrl+[",
        "command": "workbench.action.closeQuickOpen",
        "when": "inQuickOpen && vim.useCtrlKeys"
    },
    {
        "key": "ctrl+c",
        "command": "workbench.action.closeMessages",
        "when": "globalMessageVisible && vim.useCtrlKeys"
    },
    {
        "key": "ctrl+[",
        "command": "workbench.action.closeMessages",
        "when": "globalMessageVisible && vim.useCtrlKeys"
    },
    {
        "key": "ctrl+c",
        "command": "hideSuggestWidget",
        "when": "editorTextFocus && suggestWidgetVisible && vim.useCtrlKeys"
    },
    {
        "key": "ctrl+[",
        "command": "hideSuggestWidget",
        "when": "editorTextFocus && suggestWidgetVisible && vim.useCtrlKeys"
    },
    {
        "key": "ctrl+c",
        "command": "closeParameterHints",
        "when": "editorTextFocus && parameterHintsVisible && vim.useCtrlKeys"
    },
    {
        "key": "ctrl+[",
        "command": "closeParameterHints",
        "when": "editorTextFocus && parameterHintsVisible && vim.useCtrlKeys"
    },
    {
        "key": "ctrl+shift+c",
        "command": "editor.action.clipboardCopyAction",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+x",
        "command": "editor.action.clipboardCutAction",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+v",
        "command": "editor.action.clipboardPasteAction",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+,",
        "command": "editor.action.outdentLines",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+.",
        "command": "editor.action.indentLines",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+shift+up",
        "command": "cursorColumnSelectUp",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+shift+down",
        "command": "cursorColumnSelectDown",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+t",
        "command": "workbench.action.tasks.runTask",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+n",
        "command": "workbench.action.files.newUntitledFile",
        "when": "editorTextFocus"
    }
]
