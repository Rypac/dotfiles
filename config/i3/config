# i3 config file (v4)

set $mod Mod4
set $alt Mod1
set $ctrl Control

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:Source Code Pro 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+q kill

# rofi and script bindings
bindsym $mod+space exec --no-startup-id rofi -show drun
bindsym $mod+Shift+p exec --no-startup-id rofi -show drun
bindsym $mod+Tab exec --no-startup-id rofi -show window
bindsym $mod+p exec --no-startup-id rofi -show window
bindsym $mod+z exec --no-startup-id ~/scripts/rofi/i3-switch-workspace.sh
bindsym $mod+Shift+q exec --no-startup-id ~/scripts/rofi/i3-logout.sh

# application bindings
bindsym $mod+Return exec i3-sensible-terminal
bindsym Print exec --no-startup-id scrot 'screenshot-%Y-%m-%d-%T.png' -e 'mv $f ~/pictures/screenshots/'

# floating terminal
bindsym $mod+Shift+Return exec --no-startup-id i3-sensible-terminal -geometry 80x26 -name "floating-terminal"
for_window [class="URxvt" instance="floating-terminal$"] floating toggle

# volume control
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/scripts/volume/control.sh up && \
    pkill -RTMIN+10 i3blocks && ~/scripts/notifications/volume.sh
bindsym XF86AudioLowerVolume exec --no-startup-id ~/scripts/volume/control.sh down && \
    pkill -RTMIN+10 i3blocks && ~/scripts/notifications/volume.sh
bindsym XF86AudioMute exec --no-startup-id ~/scripts/volume/control.sh toggle && \
    pkill -RTMIN+10 i3blocks && ~/scripts/notifications/volume.sh

# brightness control
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5

# media player controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play
bindsym XF86AudioPause exec --no-startup-id playerctl pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# search controls
bindsym XF86Search exec --no-startup-id rofi -show drun

# omnipresent floating scratchpads
for_window [instance="omnipresent-*"] border none; \
    [instance="omnipresent-*"] floating enable; \
    [instance="omnipresent-*"] move scratchpad;

bindsym $mod+u exec --no-startup-id ~/scripts/i3/toggle-scratchpad.sh omnipresent-terminal
bindsym $mod+y exec --no-startup-id ~/scripts/i3/toggle-scratchpad.sh omnipresent-ranger ranger

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# window split
bindsym $mod+b split h
bindsym $mod+v split v

# container layout
bindsym $mod+s layout stacking
bindsym $mod+d layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+a layout toggle

# toggle tiling / floating / fullscreen
bindsym $mod+f fullscreen toggle
bindsym $mod+t floating toggle
bindsym $mod+Shift+t exec --no-startup-id ~/scripts/i3/floating.sh toggle
bindsym $mod+i floating enable; border none; resize set 1800 1320; move position center
bindsym $mod+c floating enable; move position center

# borders
bindsym $mod+comma border none
bindsym $mod+Shift+comma border pixel 1

# change window focus
bindsym $mod+$ctrl+space focus mode_toggle
bindsym $mod+Shift+a focus parent
bindsym $mod+x [urgent=latest] focus

# setup workspaces
set $ws1 1 
set $ws2 2 
set $ws3 3 
set $ws4 4 
set $ws5 5 
set $ws6 6 
set $ws7 7 
set $ws8 8 
set $ws9 9 
set $ws0 10 

# gloabl floating mode
# for_window [class="^.*"] floating toggle
# for_window [class="^.*"] floating enable

# floating windows
for_window [class="feh|Lxappearance|Seahorse|Pavucontrol|Plank|Xarchiver"] floating enable
for_window [window_role="pop-up|task_dialog"] floating enable

# workspace specific apps
assign [class="Google-chrome|Firefox"] $ws2
assign [class="Atom|Sublime_text|Code|QtCreator"] $ws3
assign [class="Deadbeef"] $ws4
for_window [class="Spotify"] move container to workspace $ws4

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10
bindsym $mod+grave workspace back_and_forth

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10
bindsym $mod+Shift+grave move container to workspace back_and_forth; workspace back_and_forth

# arrow key workspace switching
bindsym $mod+$ctrl+Left workspace prev
bindsym $mod+$ctrl+Right workspace next
bindsym $mod+$ctrl+h workspace prev
bindsym $mod+$ctrl+l workspace next

# arrow key move selected container to workspace
bindsym $mod+$ctrl+Shift+Left move container to workspace prev
bindsym $mod+$ctrl+Shift+Right move container to workspace next
bindsym $mod+$ctrl+Shift+h move container to workspace prev
bindsym $mod+$ctrl+Shift+l move container to workspace next

# scratchpad
bindsym $mod+n scratchpad show

# i3bar
bindsym $mod+backslash bar mode toggle

# restarting i3
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# modes
set $mode_default default

# modes menu
set $mode_menu Modes: [r] resize, [l] layout, [g] gaps, [a] apps, [v] volume, [s] system, [m] mouse, [p] scratchpad, [d] default
bindsym $mod+slash mode "$mode_menu"
bindsym $mod+m mode "$mode_menu"

mode "$mode_menu" {
    bindsym r mode "$mode_resize"
    bindsym l mode "$mode_layout"
    bindsym g mode "$mode_gaps"
    bindsym a mode "$mode_apps"
    bindsym v mode "$mode_volume"
    bindsym s mode "$mode_system"
    bindsym m mode "$mode_mouse"
    bindsym p mode "$mode_scratchpad"
    bindsym d mode "$mode_default"

    bindsym Return mode "$mode_default"
    bindsym Escape mode "$mode_default"
    bindsym q mode "$mode_default"
    bindsym b mode "$mode_default"
    bindsym BackSpace mode "$mode_default"
}

# resize mode
set $mode_resize Resize
bindsym $mod+r mode "$mode_resize"

mode "$mode_resize" {
    bindsym h resize grow left 10 px or 5 ppt
    bindsym j resize grow down 10 px or 5 ppt
    bindsym k resize grow up 10 px or 5 ppt
    bindsym l resize grow right 10 px or 5 ppt
    bindsym Shift+h resize shrink left 10 px or 5 ppt
    bindsym Shift+j resize shrink down 10 px or 5 ppt
    bindsym Shift+k resize shrink up 10 px or 5 ppt
    bindsym Shift+l resize shrink right 10 px or 5 ppt

    bindsym Left resize shrink width 10 px or 5 ppt
    bindsym Down resize shrink height 10 px or 5 ppt
    bindsym Up resize grow height 10 px or 5 ppt
    bindsym Right resize grow width 10 px or 5 ppt
    bindsym Shift+Left resize shrink width 150 px or 15 ppt
    bindsym Shift+Down resize shrink height 150 px or 15 ppt
    bindsym Shift+Up resize grow height 150 px or 15 ppt
    bindsym Shift+Right resize grow width 150 px or 15 ppt

    bindsym Return mode "$mode_default"
    bindsym Escape mode "$mode_default"
    bindsym q mode "$mode_default"
    bindsym b mode "$mode_menu"
    bindsym BackSpace mode "$mode_menu"
}

# layout mode
set $mode_layout Layout: [h] horiztonal split, [v] vertical split, [t] tabbed, [s] stacking, [o] toggle
bindsym $mod+o mode "$mode_layout"

mode "$mode_layout" {
    bindsym h layout splitv
    bindsym v layout splith
    bindsym t layout tabbed
    bindsym s layout stacking
    bindsym o layout toggle

    bindsym Return mode "$mode_default"
    bindsym Escape mode "$mode_default"
    bindsym q mode "$mode_default"
    bindsym b mode "$mode_menu"
    bindsym BackSpace mode "$mode_menu"
}

# system mode
set $mode_system System: [l] lock, [o] logout, [s] sleep, [h] hibernate, [r] reboot, [p] shutdown
bindsym $mod+Escape mode "$mode_system"

mode "$mode_system" {
    bindsym l exec --no-startup-id ~/scripts/i3/exit.sh lock; mode "$mode_default"
    bindsym o exec --no-startup-id ~/scripts/i3/exit.sh logout; mode "$mode_default"
    bindsym s exec --no-startup-id ~/scripts/i3/exit.sh sleep; mode "$mode_default"
    bindsym h exec --no-startup-id ~/scripts/i3/exit.sh hibernate; mode "$mode_default"
    bindsym r exec --no-startup-id ~/scripts/i3/exit.sh reboot; mode "$mode_default"
    bindsym p exec --no-startup-id ~/scripts/i3/exit.sh shutdown; mode "$mode_default"

    bindsym Return mode "$mode_default"
    bindsym Escape mode "$mode_default"
    bindsym q mode "$mode_default"
    bindsym b mode "$mode_menu"
    bindsym BackSpace mode "$mode_menu"
}

# scratchpad mode
set $mode_scratchpad Scratchpad: [m] move, [s] show, [r] remove
bindsym $mod+Shift+n mode "$mode_scratchpad"

mode "$mode_scratchpad" {
    bindsym m move scratchpad
    bindsym s scratchpad show
    bindsym r floating disable

    bindsym Return mode "$mode_default"
    bindsym Escape mode "$mode_default"
    bindsym q mode "$mode_default"
    bindsym b mode "$mode_menu"
    bindsym BackSpace mode "$mode_menu"
}

# volume mode
set $mode_volume Volume: [k] +10%, [Shift+k] +1%, [j] -10%, [Shift+j] -1%, [m] mute
bindsym $mod+Shift+o mode "$mode_volume"

mode "$mode_volume" {
    bindsym k exec --no-startup-id ~/scripts/volume/control.sh up 10% && pkill -RTMIN+10 i3blocks
    bindsym j exec --no-startup-id ~/scripts/volume/control.sh down 10% && pkill -RTMIN+10 i3blocks
    bindsym Shift+k exec --no-startup-id ~/scripts/volume/control.sh up 1% && pkill -RTMIN+10 i3blocks
    bindsym Shift+j exec --no-startup-id ~/scripts/volume/control.sh down 1% && pkill -RTMIN+10 i3blocks
    bindsym Up exec --no-startup-id ~/scripts/volume/control.sh up && pkill -RTMIN+10 i3blocks
    bindsym Down exec --no-startup-id ~/scripts/volume/control.sh down && pkill -RTMIN+10 i3blocks
    bindsym Shift+Up exec --no-startup-id ~/scripts/volume/control.sh up 1% && pkill -RTMIN+10 i3blocks
    bindsym Shift+Down exec --no-startup-id ~/scripts/volume/control.sh down 1% && pkill -RTMIN+10 i3blocks
    bindsym m exec --no-startup-id ~/scripts/volume/control.sh toggle && pkill -RTMIN+10 i3blocks
    bindsym r exec --no-startup-id pkill -RTMIN+10 i3blocks

    bindsym Return mode "$mode_default"
    bindsym Escape mode "$mode_default"
    bindsym q mode "$mode_default"
    bindsym b mode "$mode_menu"
    bindsym BackSpace mode "$mode_menu"
}

# apps mode
set $mode_apps Apps: [c] chrome, [f] file-manager, [t] terminal, [a] atom, [s] sublime, [d] deadbeef, [m] spotify, [k] keepassx, [r] rofi, [p] pulseaudio, [h] htop, [v] virt-manager
bindsym $mod+Shift+m mode "$mode_apps"

mode "$mode_apps" {
    bindsym c exec google-chrome; mode "$mode_default"
    bindsym f exec pcmanfm; mode "$mode_default"
    bindsym k exec keepassx; mode "$mode_default"
    bindsym m exec spotify; mode "$mode_default"
    bindsym d exec deadbeef; mode "$mode_default"
    bindsym a exec atom; mode "$mode_default"
    bindsym s exec subl; mode "$mode_default"
    bindsym v exec virt-manager; mode "$mode_default"
    bindsym p exec pavucontrol; mode "$mode_default"
    bindsym r exec rofi -show drun; mode "$mode_default"
    bindsym t exec i3-sensible-terminal; mode "$mode_default"
    bindsym h exec i3-sensible-terminal -e htop; mode "$mode_default"

    bindsym Return mode "$mode_default"
    bindsym Escape mode "$mode_default"
    bindsym q mode "$mode_default"
    bindsym b mode "$mode_menu"
    bindsym BackSpace mode "$mode_menu"
}

# mouse mode
set $mode_mouse Mouse: [h] left, [j] down, [k] up, [l] right, [f] left click, [d] middle click, [s] right click
bindsym $mod+Shift+i mode "$mode_mouse"

mode "$mode_mouse" {
    set $slow 2
    set $medium 20
    set $fast 200

    # mouse movement (slow)
    bindsym h exec xdotool mousemove_relative -- -$slow 0
    bindsym j exec xdotool mousemove_relative 0 $slow
    bindsym k exec xdotool mousemove_relative -- 0 -$slow
    bindsym l exec xdotool mousemove_relative $slow 0
    bindsym Left exec xdotool mousemove_relative -- -$slow 0
    bindsym Down exec xdotool mousemove_relative 0 $slow
    bindsym Up exec xdotool mousemove_relative -- 0 -$slow
    bindsym Right exec xdotool mousemove_relative $slow 0

    # mouse movement (medium)
    bindsym Shift+h exec xdotool mousemove_relative -- -$medium 0
    bindsym Shift+j exec xdotool mousemove_relative 0 $medium
    bindsym Shift+k exec xdotool mousemove_relative -- 0 -$medium
    bindsym Shift+l exec xdotool mousemove_relative $medium 0
    bindsym Shift+Left exec xdotool mousemove_relative -- -$medium 0
    bindsym Shift+Down exec xdotool mousemove_relative 0 $medium
    bindsym Shift+Up exec xdotool mousemove_relative -- 0 -$medium
    bindsym Shift+Right exec xdotool mousemove_relative $medium 0

    # mouse movement (fast)
    bindsym $mod+Shift+h exec xdotool mousemove_relative -- -$fast 0
    bindsym $mod+Shift+j exec xdotool mousemove_relative 0 $fast
    bindsym $mod+Shift+k exec xdotool mousemove_relative -- 0 -$fast
    bindsym $mod+Shift+l exec xdotool mousemove_relative $fast 0
    bindsym $mod+Shift+Left exec xdotool mousemove_relative -- -$fast 0
    bindsym $mod+Shift+Down exec xdotool mousemove_relative 0 $fast
    bindsym $mod+Shift+Up exec xdotool mousemove_relative -- 0 -$fast
    bindsym $mod+Shift+Right exec xdotool mousemove_relative $fast 0

    # left/middle/right click
    bindsym f exec xdotool click 1
    bindsym d exec xdotool click 2
    bindsym s exec xdotool click 3

    # left/middle/right click-and-drag
    bindsym Shift+f exec xdotool mousedown 1
    bindsym Shift+d exec xdotool mousedown 2
    bindsym Shift+s exec xdotool mousedown 3

    # left/middle/right drag release
    bindsym $mod+f exec xdotool mouseup 1
    bindsym $mod+d exec xdotool mouseup 2
    bindsym $mod+s exec xdotool mouseup 3

    bindsym Return mode "$mode_default"
    bindsym Escape mode "$mode_default"
    bindsym q mode "$mode_default"
    bindsym b mode "$mode_menu"
    bindsym BackSpace mode "$mode_menu"
}

# gaps
set $inner_gaps 30
set $outer_gaps 20
for_window [class="^.*"] border none
gaps inner $inner_gaps
gaps outer $outer_gaps
smart_borders on

# gaps mode
set $mode_gaps Gaps: [o] outer, [i] inner, [d] default, [n] none
set $mode_gaps_outer Outer Gaps: [+|-|0] local, [Shift + +|-|0] global, [b] back
set $mode_gaps_inner Inner Gaps: [+|-|0] local, [Shift + +|-|0] global, [b] back
bindsym $mod+g mode "$mode_gaps"

mode "$mode_gaps" {
    bindsym o mode "$mode_gaps_outer"
    bindsym i mode "$mode_gaps_inner"
    bindsym d gaps outer all set $outer_gaps; gaps inner all set $inner_gaps; mode "$mode_default"
    bindsym n gaps outer all set 0; gaps inner all set 0; mode "$mode_default"
    bindsym Shift+d gaps outer current set $outer_gaps; gaps inner current set $inner_gaps; mode "$mode_default"
    bindsym Shift+n gaps outer current set 0; gaps inner current set 0; mode "$mode_default"

    bindsym Return mode "$mode_default"
    bindsym Escape mode "$mode_default"
    bindsym q mode "$mode_default"
    bindsym b mode "$mode_menu"
    bindsym BackSpace mode "$mode_menu"
}

mode "$mode_gaps_inner" {
    bindsym k gaps inner current plus 10
    bindsym j gaps inner current minus 10
    bindsym Up gaps inner current plus 10
    bindsym Down gaps inner current minus 10
    bindsym 0 gaps inner current set 0

    bindsym Shift+k gaps inner all plus 10
    bindsym Shift+j gaps inner all minus 10
    bindsym Shift+Up gaps inner all plus 10
    bindsym Shift+Down gaps inner all minus 10
    bindsym Shift+0 gaps inner all set 0

    bindsym Return mode "$mode_default"
    bindsym Escape mode "$mode_default"
    bindsym q mode "$mode_default"
    bindsym b mode "$mode_gaps"
    bindsym BackSpace mode "$mode_gaps"
}

mode "$mode_gaps_outer" {
    bindsym k gaps outer current plus 10
    bindsym j gaps outer current minus 10
    bindsym Up gaps outer current plus 10
    bindsym Down gaps outer current minus 10
    bindsym 0 gaps outer current set 0

    bindsym Shift+k gaps outer all plus 10
    bindsym Shift+j gaps outer all minus 10
    bindsym Shift+Up gaps outer all plus 10
    bindsym Shift+Down gaps outer all minus 10
    bindsym Shift+0 gaps outer all set 0

    bindsym Return mode "$mode_default"
    bindsym Escape mode "$mode_default"
    bindsym q mode "$mode_default"
    bindsym b mode "$mode_gaps"
    bindsym BackSpace mode "$mode_gaps"
}

# colour scheme
set $base00 #1B2B34
set $base01 #343D46
set $base02 #4F5B66
set $base03 #65737E
set $base04 #A7ADBA
set $base05 #C0C5CE
set $base06 #CDD3DE
set $base07 #D8DEE9
set $base08 #EC5f67
set $base09 #F99157
set $base0A #FAC863
set $base0B #99C794
set $base0C #5FB3B3
set $base0D #6699CC
set $base0E #C594C5
set $base0F #AB7967

# colour                border    bg     text     ind
client.focused          $base0D $base0D $base01 $base01
client.focused_inactive $base02 $base02 $base05 $base01
client.unfocused        $base01 $base01 $base04 $base01
client.urgent           $base02 $base08 $base07 $base08

bar {
    status_command i3blocks
    position top
    height 26
    font pango:Source Code Pro 10
    strip_workspace_numbers yes
    separator_symbol "|"
    bindsym button4 nop
    bindsym button5 nop

    colors {
        separator $base03
        background $base01
        statusline $base05

        # colour           border    bg     text
        focused_workspace  $base0D $base0D $base01
        active_workspace   $base02 $base02 $base05
        inactive_workspace $base01 $base01 $base04
        urgent_workspace   $base08 $base08 $base07
    }
}
