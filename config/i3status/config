general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

# Visible
order += "disk /"
order += "ethernet eth0"
order += "load"
order += "volume master"
order += "tztime local"

# Hidden
# order += "wireless wlan0"
# order += "cpu_temperature 0"
# order += "battery 0"

wireless wlan0 {
    format_up = "W: (%quality at %essid, %bitrate) %ip"
    format_down = "W: down"
}

ethernet eth0 {
    # if you use %speed, i3status requires the cap_net_admin capability
    format_up = " E: %ip (%speed) "
    format_down = " E: down "
}

battery 0 {
    format = " BATTERY: %status %percentage %remaining %emptytime "
    format_down = "No battery"
    status_chr = "⚇ CHR"
    status_bat = "⚡ BAT"
    status_full = "☻ FULL"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

tztime local {
    format = " %Y-%m-%d %H:%M:%S "
}

load {
    format = " LOAD: %5min "
}

cpu_temperature 0 {
    format = " TEMP: %degrees °C "
    path = "/sys/devices/platform/coretemp.0/temp1_input"
}

disk "/" {
    format = " DISK: %used used, %free free "
}

volume master {
    format = " ♪: %volume "
    format_muted = " ♪: muted (%volume) "
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
