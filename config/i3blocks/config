# i3blocks configuration

# Global properties
separator_block_width=20
command=/usr/local/libexec/i3blocks/$BLOCK_NAME
markup=none

[window title]
command=xtitle -s
interval=persist
color=#9ac1d9

[battery]
label=  
interval=30

[wifi]
label=  
interval=10

[time]
label=  
command=date '+%A %d %b, %-I:%M%P'
interval=5

[exit]
full_text= 
command=echo ' '; [[ -z "${BLOCK_BUTTON}" ]] || $HOME/scripts/rofi/i3-logout.sh
