[
    {
        "key": "ctrl+o",
        "command": "workbench.action.navigateBack",
        "when": "editorTextFocus && !inDebugRepl && vim.useCtrlKeys && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+i",
        "command": "workbench.action.navigateForward",
        "when": "editorTextFocus && !inDebugRepl && vim.useCtrlKeys && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+f",
        "command": "actions.find",
        "when": "editorTextFocus && !inDebugRepl && vim.useCtrlKeys && vim.mode == 'Insert'"
    },
    {
        "key": "ctrl+d",
        "command": "editor.action.addSelectionToNextFindMatch",
        "when": "editorTextFocus && !inDebugRepl && vim.useCtrlKeys && vim.mode == 'Insert'"
    },
    {
        "key": "ctrl+n",
        "command": "editor.action.addSelectionToNextFindMatch",
        "when": "editorTextFocus && !inDebugRepl && !suggestWidgetVisible && vim.useCtrlKeys && vim.mode == 'Insert'"
    },
    {
        "key": "ctrl+n",
        "command": "extension.vim_cmd+d",
        "when": "editorTextFocus && !inDebugRepl && !suggestWidgetVisible && vim.useCtrlKeys && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+p",
        "command": "editor.action.moveSelectionToPreviousFindMatch",
        "when": "editorTextFocus && !inDebugRepl && !suggestWidgetVisible && vim.useCtrlKeys && vim.mode != 'Normal'"
    },
    {
        "key": "ctrl+x",
        "command": "editor.action.moveSelectionToNextFindMatch",
        "when": "editorTextFocus && !inDebugRepl && !suggestWidgetVisible && vim.useCtrlKeys && vim.mode != 'Normal'"
    },
    {
        "key": "ctrl+shift+c",
        "command": "editor.action.clipboardCopyAction",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+x",
        "command": "editor.action.clipboardCutAction",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+v",
        "command": "editor.action.clipboardPasteAction",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+,",
        "command": "editor.action.outdentLines",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+.",
        "command": "editor.action.indentLines",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+shift+up",
        "command": "cursorColumnSelectUp",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+shift+down",
        "command": "cursorColumnSelectDown",
        "when": "editorTextFocus"
    }
]
