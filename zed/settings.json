{
  "base_keymap": "SublimeText",
  "vim_mode": true,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "buffer_font_size": 14,
  "lsp": {
    "hls": {
      "initialization_options": {
        "haskell": {
          "formattingProvider": "fourmolu",
          "cabalFormattingProvider": "cabal-gild",
          "plugin": {
            "rename": {
              "config": {
                "crossModule": true
              }
            }
          }
        }
      }
    }
  }
}
