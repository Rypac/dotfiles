{
  "features": {
    "inline_completion_provider": "none"
  },
  "base_keymap": "SublimeText",
  "vim_mode": true,
  "vim": {
    "use_multiline_find": true
  },
  "buffer_font_family": "Menlo",
  "buffer_font_size": 12,
  "cursor_blink": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "lsp": {
    "hls": {
      "initialization_options": {
        "haskell": {
          "formattingProvider": "fourmolu",
          "cabalFormattingProvider": "cabal-gild",
          "plugin": {
            "rename": {
              "config": {
                "crossModule": true
              }
            }
          }
        }
      }
    }
  }
}
