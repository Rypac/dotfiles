#!/usr/bin/env bash

set -eu

sudo apt update
sudo apt upgrade
sudo apt install --yes \
    apt-listchanges \
    curl \
    fail2ban \
    fish \
    git \
    htop \
    mosh \
    ranger \
    silver-searcher-ag \
    ssh \
    tig \
    tmux \
    ufw \
    unattended-upgrades \
    vim \
    wget \
    zsh

sudo chsh -s "$(command -v fish)" "$USER"
