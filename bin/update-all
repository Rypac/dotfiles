#!/usr/bin/env bash

: "${DOTFILES_HOME:="$HOME/.dotfiles"}"

# dotfiles
(
    cd "$DOTFILES_HOME"
    git pull --recurse-submodules
    ./install
)

# brew packages
brew update
brew upgrade
brew bundle --file="$DOTFILES_HOME/mac/Brewfile"

# app store
mas upgrade

# vim package docs
vim -c 'helptags all' +qall
