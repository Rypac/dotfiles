#!/usr/bin/env bash

: "${DOTFILES_HOME:="$HOME/.dotfiles"}"

# dotfiles
update-dotfiles

# brew packages
brew update
brew upgrade
brew bundle --file="$DOTFILES_HOME/mac/Brewfile"

# shell
fish -c 'fisher up'

# fzf
(
    cd "$XDG_DATA_HOME/fzf" || exit
    git pull
    ./install --bin
)

# rust
rustup update
cargo install-update -a

# stack
stack --resolver nightly update
stack --resolver nightly upgrade

# npm
fish -c 'fnm ls > /dev/null; and fnm use latest'
npm update -g
yarn global upgrade

# python
fish -c 'pip3 update'

# vim
vim +PlugInstall +PlugUpdate +PlugClean! +PlugUpgrade +qall

