#!/usr/bin/env bash
#
# Diff two files using Sublime Text

usage() {
    echo "usage: $(basename "$0") [from_file] [to_file]"
}

absolute_path() {
    if [ -f "$1" ]; then
        if [[ $1 = /* ]]; then
            echo "$1"
        elif [[ $1 == */* ]]; then
            echo "$(cd "${1%/*}"; pwd)/${1##*/}"
        else
            echo "$(pwd)/$1"
        fi
    fi
}

if [ "$#" -ne 2 ]; then
    usage && exit 1
fi

from_file="$(absolute_path "$1")"
to_file="$(absolute_path "$2")"

if [ ! -f "$from_file" ]; then
    echo "$from_file is not a file" && exit 1
fi

if [ ! -f "$to_file" ]; then
    echo "$to_file is not a file" && exit 1
fi

subl --new-window --command "diff_files { \"files\": [\"$from_file\", \"$to_file\"] }"
