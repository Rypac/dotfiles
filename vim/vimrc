" Plugins {{{

if empty(glob('~/.vim/autoload/plug.vim'))
    silent !curl -fLo ~/.vim/autoload/plug.vim --create-dirs
        \ https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
    autocmd VimEnter * PlugInstall --sync | source $MYVIMRC
endif

call plug#begin('~/.vim/plugged')

" Features
Plug 'tpope/vim-sensible'
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-surround'
Plug 'tpope/vim-vinegar'
Plug 'matze/vim-move'
Plug 'junegunn/vim-peekaboo'
" Plug 'airblade/vim-gitgutter'
Plug 'terryma/vim-multiple-cursors'

" Files
Plug '/usr/local/opt/fzf'
Plug 'junegunn/fzf.vim'

" Languages
Plug 'rust-lang/rust.vim', { 'for': 'rust' }
Plug 'keith/swift.vim', { 'for': 'swift' }
Plug 'dag/vim-fish', { 'for': 'fish' }
Plug 'junegunn/goyo.vim', { 'for': 'markdown' }

" Themes
Plug 'arcticicestudio/nord-vim'

call plug#end()

" }}}

" Plugin configuration {{{

" netrw
let g:netrw_liststyle = 3
let g:netrw_winsize = 75

" GitGutter
let g:gitgutter_eager = 1
let g:gitgutter_realtime = 1
let g:gitgutter_override_sign_column_highlight = 0
set signcolumn=yes

" }}}

" Options {{{

" UI
set number
set showmatch
set matchtime=2
set whichwrap+=h,l
set updatetime=500
set belloff=all
set nomodeline

" Searching
set hlsearch
set ignorecase
set smartcase

" Tabs
set splitbelow
set splitright

" Always replace tabs with 2 spaces
set expandtab
set shiftwidth=2
set tabstop=2

" Indentation
set smartindent
set wrap

" Ignore certain files and directories
set wildignore+=*.o,*~,*.pyc,*/.git/*,*/node_modules/*
set viminfo=
set noswapfile

" Theme
colorscheme nord

" }}}

" Keybindings {{{

" Quick leader actions
let mapleader = "\\"

" Disable highlight
nnoremap <silent> <cr> :nohlsearch<cr><cr>
nnoremap <silent> <space> :nohlsearch<cr><space>
nnoremap <silent> <C-l> :nohlsearch<cr><C-l>

" Fast actions
nmap <leader>w :write<cr>
nmap <leader>x :exit<cr>
nmap <leader>q :quit<cr>
nmap <leader>Q :quitall<cr>
nmap <leader>f :Files<cr>
nmap <leader>g :Goyo<cr>
nmap <leader>b :Buffers<cr>
nmap <leader>c :Commands<cr>
nmap <leader>r :redraw!<cr>

" fzf
nnoremap <F9> :Files<cr>
nnoremap <F10> :Buffers<cr>

" Window resizing
nnoremap <D-left> :vertical resize -5<cr>
nnoremap <D-down> :resize +5<cr>
nnoremap <D-up> :resize -5<cr>
nnoremap <D-right> :vertical resize +5<cr>

" }}}

" vim:foldmethod=marker:foldlevel=0
