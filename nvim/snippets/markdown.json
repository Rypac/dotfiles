{
    "header 1": {
        "prefix": "h1",
        "body": ["# $0"],
        "description": "Add header level 1"
    },
    "header 2": {
        "prefix": "h2",
        "body": ["## $0"],
        "description": "Add header level 2"
    },
    "header 3": {
        "prefix": "h3",
        "body": ["### $0"],
        "description": "Add header level 3"
    },
    "header 4": {
        "prefix": "h4",
        "body": ["#### $0"],
        "description": "Add header level 4"
    },
    "header 5": {
        "prefix": "h5",
        "body": ["##### $0"],
        "description": "Add header level 5"
    },
    "header 6": {
        "prefix": "h6",
        "body": ["###### $0"],
        "description": "Add header level 6"
    },
    "Link": {
        "prefix": ["l", "link"],
        "body": ["[${1:text}](${2:url}) $0"],
        "description": "Add links"
    },
    "URL": {
        "prefix": ["u", "url"],
        "body": ["<${1}> $0"],
        "description": "Add urls"
    },
    "Image": {
        "prefix": "img",
        "body": ["![${1:alt text}](${2:path}) $0"],
        "description": "Add images"
    },
    "strikethrough": {
        "prefix": ["st", "strikethrough"],
        "body": ["~~${1}~~ $0"],
        "description": "Insert strikethrough"
    },
    "bold": {
        "prefix": ["b", "bold"],
        "body": ["**${1}** $0"],
        "description": "Insert bold text"
    },
    "italic": {
        "prefix": ["i", "italic"],
        "body": ["_${1}_ $0"],
        "description": "Insert italic text"
    },
    "bold italic": {
        "prefix": ["bi", "bold italic"],
        "body": ["**_${1}_** $0"],
        "description": "Insert bold and italic text"
    },
    "quote": {
        "prefix": ["q", "quote"],
        "body": ["> ${1}"],
        "description": "Insert quoted text"
    },
    "code": {
        "prefix": ["c", "code"],
        "body": ["`${1}` $0"],
        "description": "Insert code"
    },
    "codeblock": {
        "prefix": ["cb", "codeblock"],
        "body": ["```${1:language}", "$0", "```"],
        "description": "Insert fenced code block"
    },
    "unordered list": {
        "prefix": "ul",
        "body": ["- ${1:first}", "- ${2:second}", "- ${3:third}", "$0"],
        "description": "Insert unordered list"
    },
    "ordered list": {
        "prefix": "ol",
        "body": ["1. ${1:first}", "2. ${2:second}", "3. ${3:third}", "$0"],
        "description": "Insert ordered list"
    },
    "horizontal rule": {
        "prefix": "hr",
        "body": ["----------", "$0"],
        "description": "Insert horizontal rule"
    },
    "task list": {
        "prefix": ["tl", "task"],
        "body": ["- [${1| ,x|}] ${2:text}", "$0"],
        "description": "Insert task list"
    },
    "table": {
        "prefix": "table",
        "body": [
            "| ${1:Column1} | ${2:Column2} | ${3:Column3} |",
            "| ------------- | -------------- | -------------- |",
            "| ${4:Item1} | ${5:Item1} | ${6:Item1} |",
            "$0"
        ],
        "description": "Insert table with 2 rows and 3 columns. First row is heading."
    },
    "note": {
        "prefix": "note",
        "body": ["> [!NOTE]", "> $0"],
        "description": "Insert Note"
    },
    "tip": {
        "prefix": "tip",
        "body": ["> [!TIP]", "> $0"],
        "description": "Insert Tip"
    },
    "important": {
        "prefix": "important",
        "body": ["> [!IMPORTANT]", "> $0"],
        "description": "Insert Important"
    },
    "warning": {
        "prefix": "warning",
        "body": ["> [!WARNING]", "> $0"],
        "description": "Insert Warning"
    },
    "caution": {
        "prefix": "caution",
        "body": ["> [!CAUTION]", "> $0"],
        "description": "Insert Caution"
    }
}
